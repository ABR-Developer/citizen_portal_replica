@{
    Layout = "_Layout";
}
@model Citizen_Portal.Models.Admin
<!-- Section: Design Block -->
<section class="text-center">
  <!-- Background image -->
    @*background-image: url('https://mdbootstrap.com/img/new/textures/full/171.jpg');*@
    <div class="d-flex justify-content-center py-5" style="background: Black;">
        <div class="col-8 card my-5 shadow-5-strong" style="background: hsla(0, 0%, 100%, 0.8); backdrop-filter: blur(30px);">
        <div class="card-body py-4">
            <div class="row d-flex justify-content-center">
            <div class="col-lg-8">
                <div class="d-flex justify-content-evenly">
                    <div class="d-flex justify-content-center bg-danger">
                        <div style="width: 25px;height: 25px;position: relative;overflow: hidden;border-radius: 50%;">
                            <img style="margin: 0 auto;height: 100%;width: auto;" src="~/lib/circular admin logo.png" alt="Admin Logo"/>
                        </div>
                    </div>
                    <div>
                        <h2 class="fw-bold mb-5">Admin</h2>
                    </div>
                </div>
                <form>
                    <div class="form-outline mb-4">
                        <label class="form-label" asp-for="name"> Enter Name </label>
                        <input asp-for="name" id="form3Example3" class="form-control" />
                    </div>
                    <div class="form-outline mb-4">
                        <label class="form-label" for="form3Example4">Enter Password</label>
                        <input type="password" id="form3Example4" class="form-control" />
                    </div>
                    <button type="submit" class="btn btn-primary px-5">
                        Login
                    </button>
                </form>
                <div class="py-2">
                    <h5>Not an admin ? <span><a asp-controller="Home" asp-action="Index">Return to Home Page</a></span></h5>
                </div>
            </div>
            </div>
        </div>
        </div>
    </div>
  <!-- Background image -->
</section>
<!-- Section: Design Block -->